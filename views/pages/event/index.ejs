<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head') %>

    <title>Home Page</title>
    <body>
<%- include('../layout/header') %>

 <main class="grid index-main">


 <% events.forEach(el => { %>
<article>
 <img class="index-img" src="<%=el.imageUrl%>" alt="<%= el.eventName %>">
  <div class="text">
 <h4 class="index-h4"> Name : <%= el.eventName %></h4>
 <h4>Location :  <%= el.venues %> ,  <%= el.city %>  ,  <%= el.country %> </h4>
  <button type="button"><a href="/#/<%=el.id%>">View Details</a> </button> 
</div>

</article>
      <% }); %>

 
<%  if (Object.keys(events).length === 0) { %>
 <h3>Sorry , No result was found</h3>

 <% } %>
 </main>
     <%- include('../layout/footer') %>
 <script src="js/app.js"></script>
    </body>
</html>



